# Google Cloud Platform Configuration
GCP_PROJECT_ID=your-project-id
GCP_LOCATION=us-central1
GCP_KEY_FILE_PATH=/path/to/service-account-key.json

# BigQuery Configuration
CASH_CLEARING_DATASET=your-dataset-name

# OpenRouter Configuration
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet  # Options: anthropic/claude-3.5-sonnet, meta-llama/llama-3.1-405b-instruct, mistral/mixtral-8x7b-instruct

# Legacy OpenAI Configuration (still used by older processors)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4.1  # Options: gpt-4.1, gpt-4.1-mini, gpt-4o, gpt-4o-mini, gpt-4-turbo

# Processing Configuration
PROCESSOR_TYPE=standard  # Options: standard, advanced
BATCH_SIZE=100
CONFIDENCE_THRESHOLD=0.85
CONCURRENCY=3           # For advanced processor only
RETRY_ATTEMPTS=3        # For advanced processor only

# Scheduler Configuration
CRON_SCHEDULE=0 2 * * *  # Daily at 2 AM
RUN_ON_STARTUP=false
TZ=UTC

# MCP Server Configuration (for remote MCP)
# MCP_SERVER_URL=http://localhost:8080/mcp
# MCP_TOKEN=your-mcp-server-token

# Logging Configuration
LOG_LEVEL=info          # Options: error, warn, info, debug
LOG_DIR=./logs
NODE_ENV=development    # Options: development, production

# Notification Configuration (optional)
# NOTIFICATION_WEBHOOK=https://your-webhook-url.com/notifications

# Performance Monitoring (optional)
# ENABLE_METRICS=true
# METRICS_PORT=9090

# Pattern Matching Batch Processing Configuration
PATTERN_BATCH_SIZE=100          # Number of transactions per batch
PATTERN_CONCURRENCY=3           # Number of parallel batches to process
PATTERN_MAX_DAILY_LIMIT=50000   # Maximum transactions to process per day
PATTERN_RETRY_ATTEMPTS=3        # Number of retry attempts for failed transactions
PATTERN_OUTPUT_DIR=./results    # Directory for CSV output files
USE_LOCAL_PATTERN_MATCHING=true # Use local pattern matching (true) or AI (false)

# Pattern Matching Job Configuration
PATTERN_MATCHING_ENABLED=true   # Enable pattern matching cron job
PATTERN_CRON_SCHEDULE=0 3 * * * # Run daily at 3 AM (cron format)
PATTERN_NOTIFICATION_WEBHOOK=   # Webhook URL for job notifications (optional)
PATTERN_ERROR_WEBHOOK=          # Webhook URL for error notifications (optional)